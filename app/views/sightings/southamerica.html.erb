
  <%= render partial: 'common/map', locals: {ufo_list: @ufo_list, map_id: 'sightings-map', map_zoom: 3, map_center: [-20.46, -61.69]} %>

  <div class="row">
			<div class="span12">
				<h3>Latest UFO sightings in South America</h3>
			</div>
  </div>

  <div class="row">
			<div class="span12">
					<div id="sightings-map" style="width: 100%; height: 550px;"></div>
			</div>
  </div>

  <div class="row" style="margin-top: 20px;margin-bottom: 20px">
    <%= render partial: 'common/ads/horizontal_ad' %>
  </div>

  <div class="row">
		<div class="span12">
 		 	<h3>100 latest UFO sightings:</h3>
 		</div>
	</div>

	<div class="row">
				<div class="span8">
				<%
		     	if @ufo_list
		     	%>
		     		<div class="" style="margin-top: 20px;margin-bottom: 20px">

				      			<table class="table table-responsive table-striped">
				      				<thead>
											<tr>
													<th>Location
													</th>
													<th>Sighted on
													</th>
													<th>Shape
													</th>
													<th class="hidden-phone">Duration
													</th>
											</tr>
									</thead>
									<tbody>
							     	<%
							      	# In order to avoid the same sighting as nearest sighting
							      	@ufo_list.each do |ufo|
										%>
							    			<tr itemprop="itemListElement" itemscope itemtype="http://schema.org/Article">
								         		<td itemprop="name">
								         			<%= link_to ufo.location, :controller => "sightings", :action => "search", :id => ufo.id, :title => friendly_title(ufo) %>
								         		</td>
								         		<td itemprop="dateCreated" content="<%= format_date_microdata ufo.sighted_at %>">
									    			<%= format_date ufo.sighted_at %>
									    		</td>
									    		<td>
									    			<%=ufo.shape%>
								         		</td>
								         		<td class="hidden-phone">
									    			<%= ufo.duration %>
								         		</td>
											</tr>
									<%
									end

									%>
								    </tbody>
								</table>
					</div>

		     	<%
		        end
		        %>
			    </div>
			    <%= render partial: 'common/ads/adaptable3' %>
	 </div>
