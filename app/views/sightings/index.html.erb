            logger.info "Data error with doc #{ufo.id} - #{ex.class}: #{ex.message}"
            next
				  end
				end 
				%>
      ];

      function initialize() {
        var mapOptions = {
          zoom: 2,
          center: new google.maps.LatLng(34.16473667601063, -40.57035354999999)
        }
        map = new google.maps.Map(document.getElementById('sightings-map'), mapOptions);
        infoWindow = new google.maps.InfoWindow({content: ''});
        setMarkers(map, sightings);
      }    	

      function setMarkers(map, locations) {
  
      	for (var i = 0; i < locations.length; i++) {
      		setTimeout(function() {
            addMarker();
          }, i * 100);

        }

      }

      function getClickEvent() {
        var ua = navigator.userAgent;
        
        var clickEvent = "click";

		    if(ua.match(/iPad/i) || ua.match(/iPhone/i) || ua.match(/webOS/i) || ua.match(/Mobile/i) ){
		     	clickEvent = "touchstart";
		    }

		    return clickEvent;

      }

      function addMarker() {
      	  var image = '<%= image_path('platillo_verde.png') %>';
      	  var location = sightings[iterator];
      	  var myLatLng = new google.maps.LatLng(location[1], location[2]);
          var marker = new google.maps.Marker({
            position: myLatLng,
            map: map,
            icon: image,
            title: location[0],
            zIndex: location[3],
            draggable: false,
            clickable: true,
            animation: google.maps.Animation.DROP
          });
          marker.info = location[4];
          google.maps.event.addListener(marker, 'click', function() {
             infoWindow.content = marker.info;
             infoWindow.open(map, marker);
    });
          markers.push(marker);
          iterator++;
      }

      google.maps.event.addDomListener(window, 'load', initialize);

    </script>

