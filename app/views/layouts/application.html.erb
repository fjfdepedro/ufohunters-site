            <nav class="nav-collapse">
              
              <ul class="nav" id="menunew" itemscope="itemscope" itemtype="http://schema.org/SiteNavigationElement"><!--  class="current" -->
                <li <%if @menu.blank? == false && @menu == "index"%>class="active"<% end %>><%= link_to(raw("<div itemprop='name'>Home</div>"), {:controller => "sightings"}, :itemprop => "url")%></li>
                <li <%if @menu.blank? == false && @menu == "statistics"%>class="active"<% end %>><%= link_to(raw("<div itemprop='name'>Statistics</div>"), {:controller => "sightings", :action => "statistics"}, :itemprop => "url")%></li>                
                <li <%if @menu.blank? == false && @menu == "northamerica"%>class="active"<% end %>><%= link_to(raw("<div itemprop='name'>North America</div>"), {:controller => "sightings", :action => "northamerica"}, :itemprop => "url")%></li>
                <li <%if @menu.blank? == false && @menu == "maps"%>class="active"<% end %>><%= link_to(raw("<div itemprop='name'>Other Maps</div>"), {:controller => "sightings", :action => "maps"}, :itemprop => "url")%></li>
                <li <%if @menu.blank? == false && @menu == "report"%>class="active"<% end %>><%= link_to(raw("<div itemprop='name'>Report a UFO</div>"), {:controller => "reports", :action => "new"}, :itemprop => "url")%></li>
                <li <%if @menu.blank? == false && @menu == "videos"%>class="active"<% end %>><%= link_to(raw("<div itemprop='name'>Videos</div>"), {:controller => "sightings", :action => "videos"}, :itemprop => "url")%></li>
                <li <%if @menu.blank? == false && @menu == "about"%>class="active"<% end %>><%= link_to(raw("<div itemprop='name'>About us</div>"), {:controller => "sightings", :action => "about"}, :itemprop => "url")%></li>
              </ul>
            </nav>
	        </div>
	      </div>
	    </div>
    </div>
	
	  <%= yield %>
	
    <script type="text/javascript">
    $(document).ready(function() {
      $("#video_thumb_carousel").carousel({
        interval: 10000
      });
    });
    </script>
  
    <div class="row" style="background-color:#d7df21;margin-top: 45px">
      <div class="span12" itemscope itemtype="http://schema.org/ItemList">
        <meta itemprop="itemListOrder" content="Descending"/>
        <div>
          <div id="video_thumb_carousel" class="carousel slide">
           <!-- <ol class="carousel-indicators">
              <li data-target="#video_thumb_carousel" data-slide-to="0" class="active"></li>
              <li data-target="#video_thumb_carousel" data-slide-to="1"></li>
              <li data-target="#video_thumb_carousel" data-slide-to="2"></li>
              <li data-target="#video_thumb_carousel" data-slide-to="3"></li>
              <li data-target="#video_thumb_carousel" data-slide-to="4"></li>
            </ol>
			-->
            <div class="carousel-inner">
              <%
              video_thumb_list = video_list
              video_cont = 0
              
              video_thumb_list.each do |thumb|
                thumb.links.each do |link|
                  if youtube_link? link
                    video_id = youtube_video_id(link)

                    if video_id
                  
                      if video_cont % 4 == 0
              %>
                        <div class="item <%= "active" if video_cont == 0 %>">
                          <div class="row-fluid">
              <%
                      end
              %>
                            <div class="span3" style="text-align: center" itemprop="itemListElement" itemscope itemtype="http://schema.org/VideoObject">
                              <h4 itemprop="name" style="overflow: hidden;white-space: nowrap;text-overflow: ellipsis"><%= thumb.location %></h4>
                              <p itemprop="dateCreated" content="<%= format_date_microdata thumb.sighted_at %>"><%= format_date thumb.sighted_at %></p>
                              <div>
                                <figure>
                                <%= link_to(image_tag(Ufo::THUMBS_URL_BASE + video_id + "/1.jpg", :itemprop => "image", :style => "max-width:100%;", :alt => "UFO Sighting at " + thumb.location), :controller => "sightings", :action => "search", :id => thumb.id, :title => friendly_title(thumb)) %>
                                </figure>
                              </div>
                            </div>
              <%
                      video_cont += 1

                      if video_cont % 4 == 0 
              %>
                          </div>
                        </div>
              <%
                      end

                    end
                  end
                end                           
              end
              
              if video_cont % 4 != 0 
              %>
                          </div>
                        </div>
              <%
              end

              %>
            </div>
            <a class="left carousel-control" href="#video_thumb_carousel" data-slide="prev" style="top: 61%;left: -15px">‹</a>
            <a class="right carousel-control" href="#video_thumb_carousel" data-slide="next" style="top: 61%">›</a>
          </div>
         
        </div>
      </div>
    </div>
    
