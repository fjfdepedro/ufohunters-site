<!DOCTYPE html>
<html>
<head>
  <title>UFO Hunters - <%= @page_title %></title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
   <script src="http://www.openlayers.org/api/OpenLayers.js"></script>    
  <script type="text/javascript">var switchTo5x=true;</script>
  <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
  <script type="text/javascript">stLight.options({publisher: "0f3d2694-bb70-4df6-a2dd-bfc0da82b253", doNotHash: false, doNotCopy: false, hashAddressBar: false});</script>
<link media="screen" type="text/css" rel="stylesheet" href="http://w.sharethis.com/gallery/shareegg/shareegg.css"></link>  
</head>
<body onload="init()">
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
<div id="main">
	<div id="header">
		<div id="banner">
			<div id="welcome">
				<div id="follow_us">
					<div class="fb-like-box" data-href="http://www.facebook.com/UfoHuntersCom" data-width="292" data-show-faces="false" data-stream="false" data-header="false"></div>
					<div>
					   <iframe scrolling="no" frameborder="0" data-twttr-rendered="true" title="Twitter Follow Button" style="width: 317px; height: 28px;" class="twitter-follow-button twitter-follow-button" src="http://platform.twitter.com/widgets/follow_button.1366232305.html#_=1367084461545&id=twitter-widget-0&lang=en&screen_name=UfoHuntersCom&show_count=true&show_screen_name=true&size=l" allowtransparency="true"></iframe>
				   </div>
				</div>
				<h1>UFO Hunters</h1>
			</div>
			<div id="welcome_slogan">
				<h2>Number of sightings counted <%=@numUFO%>... and growing</h2>
			</div>
		</div>
	</div>
    
	<div id="menubar">
		<ul id="menu"><!--  class="current" -->
			<li <%if @menu.blank? == false && @menu == "index"%>class="current"<% end %>><%= link_to "Home", :controller => "sightings"%></li>
			<li <%if @menu.blank? == false && @menu == "spain"%>class="current"<% end %>><%= link_to "Spain", :controller => "sightings", :action => "spain"%></li>
			<li <%if @menu.blank? == false && @menu == "statistics"%>class="current"<% end %>><%= link_to "Statistics", :controller => "sightings", :action => "statistics"%></li>
			<li <%if @menu.blank? == false && @menu == "maps"%>class="current"<% end %>><%= link_to "Maps", :controller => "sightings", :action => "maps"%></li>
			<li <%if @menu.blank? == false && @menu == "report"%>class="current"<% end %>><%= link_to "Report a UFO", :controller => "reports", :action => "new"%></li>
			<li <%if @menu.blank? == false && @menu == "videos"%>class="current"<% end %>><%= link_to "Videos", :controller => "sightings", :action => "videos"%></li>
			<li <%if @menu.blank? == false && @menu == "about"%>class="current"<% end %>><%= link_to "About us", :controller => "sightings", :action => "about"%></li>
		</ul>
	</div>
	<%= yield %>


   <script type="text/javascript">
   $(document).ready(function() {
      $("#video_thumb_carousel").carouFredSel({
         circular: false,
         infinite: false,
         auto: false,
         width: 921,             
         height: 160,                                    
         items: {
            visible: 3,
            width: 307
         },
         prev: {     
            button: "#video_thumb_carousel_prev",
            key: "left"
         },
         next: { 
            button: "#video_thumb_carousel_next",
            key: "right"
         }
      });
   });
	</script>
	<div id="content_grey">
	   <div id="content_grey_carousel">

         <div id="video_thumb_carousel">
         <%

			video_thumb_list = video_list
			
         video_thumb_list.each do |thumb|
         	logger.info "links: " + thumb.links.to_s
         	thumb.links.each do |link|
      	      if youtube_link? link
      	   	   video_id = youtube_video_id(link)
      	   	   logger.info "video id: " + video_id
      	   	   if video_id
      	   
      %>
			            <div class="content_grey_container_box">
					         <h4><%= thumb.location %></h4>
					         <p><%= format_date thumb.sighted_at %></p>
					         <div class="video-thumb">
						         <%= link_to(image_tag(Ufo::THUMBS_URL_BASE + video_id + "/1.jpg", :alt =>  "UFO Sighting at " + thumb.location), :controller => "sightings", :action => "search", :id => thumb.id) %>
					         </div><!--close readmore-->
			            </div><!--close content_grey_container_box-->
		            <%
	            	   break
	         	   end
	            end
		      end
		   end
		   %>
		  <br style="clear:both"/>
 
      </div>
      <div class="clearfix"></div>
		<a class="prev" id="video_thumb_carousel_prev" href="#"><span>prev</span></a>
		<a class="next" id="video_thumb_carousel_next" href="#"><span>next</span></a>
      </div>
    
	</div><!--close content_grey-->
 
	<div id="footer">
		  <a href="http://validator.w3.org/check?uri=referer">Valid XHTML</a> | <a href="http://fotogrph.com/">Images</a> | website template by <a href="http://www.araynordesign.co.uk">ARaynorDesign</a>
	</div>
	
	
